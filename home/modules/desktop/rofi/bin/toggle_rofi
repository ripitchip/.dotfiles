#!/bin/sh

# A script to toggle rofi based menus. Will execute passed arguments 
# If rofi is not running. Else, will kill it

if [ "$#" -lt 1 ]; then
    exit 1
fi

script_name=$(realpath "$0")
args="$*"

if pgrep -af "$script_name" | grep -v "$args" ; then
    pkill -x rofi
    "$@"
elif pgrep -x rofi > /dev/null; then
    pkill -x rofi
else
    "$@"
fi